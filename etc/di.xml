<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="GuzzleHttp\Client">
        <arguments>
            <argument name="config" xsi:type="array">
                <item name="timeout" xsi:type="number">6</item>
                <item name="connect_timeout" xsi:type="number">3</item>
                <item name="http_errors" xsi:type="boolean">false</item>
            </argument>
        </arguments>
    </type>
    <type name="Martinkuhl\AutheliaOidc\Model\Oidc\Jwks">
        <arguments>
            <argument name="cacheTtl" xsi:type="number">3600</argument>
        </arguments>
    </type>
    <type name="Martinkuhl\AutheliaOidc\Model\Oidc\Discovery">
        <arguments>
            <argument name="cacheTtl" xsi:type="number">3600</argument>
        </arguments>
    </type>
    
    <!-- Logger Konfiguration -->
    <type name="Martinkuhl\AutheliaOidc\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Martinkuhl\AutheliaOidc\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">authelia_oidc</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">Martinkuhl\AutheliaOidc\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
</config>
